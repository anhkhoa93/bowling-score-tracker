{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "jest-setup.ts",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
